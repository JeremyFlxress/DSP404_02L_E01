@model Notas_Complementario.Models.Nota

<h2>Editar Nota</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.Codigo_alumno)
    @Html.HiddenFor(model => model.Codigo_curso)

    <div class="form-group">
        <label for="Nota40T">Nota 40% Teórica</label>
        @Html.TextBoxFor(model => model.Nota40T, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Nota60L">Nota 60% Laboratorio</label>
        @Html.TextBoxFor(model => model.Nota60L, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="NotaFinal">Nota Final</label>
        @Html.TextBoxFor(model => model.NotaFinal, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
}

<p>
    @Html.ActionLink("Volver a la lista", "Index")
</p>
