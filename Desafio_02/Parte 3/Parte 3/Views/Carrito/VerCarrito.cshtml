@model IEnumerable<Parte_3.Models.Producto>

<h2>Carrito de Compras</h2>

@if (Model != null && Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio.ToString("C")</td>
                    <td>
                        <!-- Aquí podrías agregar un campo para seleccionar la cantidad -->
                        <input type="number" value="1" min="1" max="10" />
                    </td>
                    <td>
                        <a href="@Url.Action("EliminarDelCarrito", "Carrito", new { id = producto.Id })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <strong>Total: </strong>

        <!-- Aquí puedes calcular el total de los productos en el carrito -->
        <span id="totalCarrito">@Model.Sum(p => p.Precio).ToString("C")</span>
    </div>

    <div>
        <a href="@Url.Action("ConfirmarPedido", "Carrito")" class="btn btn-primary">Proceder al Pago</a>
    </div>
}
else
{
    <p>No hay productos en el carrito.</p>
}
