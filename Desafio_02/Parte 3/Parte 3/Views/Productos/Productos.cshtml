@{
    ViewBag.Title = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productos</h2>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        background-color: #3e93e7;
        color: rgb(248, 0, 0);
        position: relative;
    }

    .search-container {
        display: flex;
        align-items: center;
        border: 2px solid #8cd0eb;
        border-radius: 20px;
        padding: 5px 10px;
    }

        .search-container input {
            border: none;
            outline: none;
            padding: 5px;
            border-radius: 20px;
        }

        .search-container img {
            width: 20px;
            height: 20px;
        }

    .menu {
        padding: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        .menu h2 {
            text-align: center;
        }

    .box {
        background-color: white;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        margin: 10px;
        display: inline-block;
        width: 150px;
        text-align: center;
    }

        .box img {
            width: 100%;
            height: auto;
        }

    .quantity-controls {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .quantity-controls button {
            width: 30px;
            height: 30px;
            font-size: 20px;
            text-align: center;
            cursor: pointer;
        }

    .quantity-display {
        width: 40px;
        text-align: center;
        font-size: 18px;
        margin: 0 10px;
    }

    .sidebar {
        display: flex;
        flex-direction: column;
        padding: 20px;
        width: 100px;
        position: absolute;
        top: 100px;
        left: 20px;
    }

        .sidebar img {
            width: 50px;
            height: 50px;
            margin-bottom: 20px;
            cursor: pointer;
        }

    .menu-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    #selected-items {
        margin-top: 20px;
        border: 1px solid #ccc;
        padding: 10px;
        width: 300px;
    }

    .finalize-button {
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #3e93e7;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

        .finalize-button:hover {
            background-color: #2b6b9c;
        }
</style>

<header>
    <div class="sidebar">
        <img src="~/Content/IMG/1.png" alt="Icono 1">
        <img src="~/Content/IMG/2.png" alt="Icono 2">
        <img src="~/Content/IMG/3.png" alt="Icono 3">
        <img src="~/Content/IMG/4.png" alt="Icono 4">
        <img src="~/Content/IMG/5.png" alt="Icono 5">
    </div>
    <h1>Menú de Comida</h1>
    <div class="search-container">
        <input type="text" placeholder="Buscar...">
        <img src="~/Content/IMG/lupa.png" alt="Buscar">
    </div>
</header>


<div class="menu">
    <div class="menu-container">
        <div class="box">
            <img src="~/Content/IMG/plato1.png" alt="Plato 1">
            <p> Breakfast</p>
            <p>## Stock</p>
        </div>
        <div class="box">
            <img src="~/Content/IMG/plato2.png" alt="Plato 2">
            <p>Lunch</p>
            <p>## Stock</p>
        </div>
        <div class="box">
            <img src="~/Content/IMG/plato3.png" alt="Plato 3">
            <p>Dinner</p>
            <p>## Stock</p>
        </div>
        <div class="box">
            <img src="~/Content/IMG/plato4.png" alt="Plato 4">
            <p> Snacks</p>
            <p>## Stock</p>
            <div class="quantity-controls"></div>
        </div>
    </div>

    <div class="menu">
        <h2>MENÚ DE LAUNCH</h2>
        <div class="menu-container">
            <div class="box">
                <img src="~/Content/IMG/plato5.png" alt="Comida 1">
                <p> Bolognesa</p>
                <p> La boloñesa es una salsa italiana tradicional, rica y sabrosa.</p>
                <p>Precio: $11</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity1', 'Bolognesa')">-</button>
                    <input id="quantity1" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity1', 'Bolognesa')">+</button>
                </div>
            </div>
            <div class="box">
                <img src="~/Content/IMG/plato6.png" alt="Comida 2">
                <p>Chicken</p>
                <p>El pollo es una excelente fuente de proteína de alta calidad.</p>
                <p>Precio: $14</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity2', 'Chicken')">-</button>
                    <input id="quantity2" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity2', 'Chicken')">+</button>
                </div>
            </div>
            <div class="box">
                <img src="~/Content/IMG/plato7.png" alt="Comida 3">
                <p> Pasta</p>
                <p> La pasta es un alimento básico en muchas culturas.</p>
                <p>Precio: $13</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity3', 'Pasta')">-</button>
                    <input id="quantity3" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity3', 'Pasta')">+</button>
                </div>
            </div>
            <div class="box">
                <img src="~/Content/IMG/plato8.png" alt="Comida 4">
                <p> Sopa</p>
                <p>La sopa es un alimento líquido preparado con un caldo base.</p>
                <p>Precio: $9</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity4', 'Sopa')">-</button>
                    <input id="quantity4" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity4', 'Sopa')">+</button>
                </div>
            </div>
            <div class="box">
                <img src="~/Content/IMG/plato9.png" alt="Comida 5">
                <p> Carne</p>
                <p> La carne es una excelente fuente de proteínas y nutrientes.</p>
                <p>Precio: $17</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity5', 'Carne')">-</button>
                    <input id="quantity5" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity5', 'Carne')">+</button>
                </div>
            </div>
            <div class="box">
                <img src="~/Content/IMG/plato10.png" alt="Comida 6">
                <p> Lasaña</p>
                <p> La lasaña es un plato en capas hecho con pasta, carne y salsa.</p>
                <p>Precio: $15</p>
                <div class="quantity-controls">
                    <button onclick="decrement('quantity6', 'Lasaña')">-</button>
                    <input id="quantity6" type="text" class="quantity-display" value="0" readonly>
                    <button onclick="increment('quantity6', 'Lasaña')">+</button>
                </div>
            </div>
        </div>
        <div id="selected-items">
            No hay productos seleccionados.
        </div>
        <button class="finalize-button" onclick="finalizeOrder()">Finalizar Pedido</button>
    </div>

    <script>
    let selectedItems = [];

        function increment(inputId, productName) {
            const input = document.getElementById(inputId);
            let value = parseInt(input.value);
            input.value = value + 1;
            updateSelectedItems(productName, value + 1);
        }

        function decrement(inputId, productName) {
            const input = document.getElementById(inputId);
            let value = parseInt(input.value);
            if (value > 0) {
                input.value = value - 1;
                updateSelectedItems(productName, value - 1);
            }
        }

        function updateSelectedItems(productName, quantity) {
            const index = selectedItems.findIndex(item => item.name === productName);
            if (index > -1) {
                if (quantity > 0) {
                    selectedItems[index].quantity = quantity;
                } else {
                    selectedItems.splice(index, 1);
                }
            } else if (quantity > 0) {
                selectedItems.push({ name: productName, quantity });
            }
            displaySelectedItems();
        }

        function displaySelectedItems() {
            const selectedDiv = document.getElementById('selected-items');
            if (selectedItems.length > 0) {
                selectedDiv.innerHTML = selectedItems.map(item => `${item.name}: ${item.quantity}`).join('<br>');
            } else {
                selectedDiv.innerHTML = 'No hay productos seleccionados.';
            }
        }

        function finalizeOrder() {
            alert("Pedido finalizado");


        }</script>

