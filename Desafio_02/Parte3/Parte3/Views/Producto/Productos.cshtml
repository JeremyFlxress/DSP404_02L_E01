@model IEnumerable<Parte3.Models.Producto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Menú</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre_Producto</td>
                <td>@item.Descripcion_del_Producto</td>
                <td>@item.Precio_Unitario.ToString("C")</td>
                <td>
                    <!-- Aquí agregar un botón para seleccionar productos -->
                    <a href="#" class="btn btn-primary">Agregar al Carrito</a>
                </td>
            </tr>
        }
    </tbody>
</table>

