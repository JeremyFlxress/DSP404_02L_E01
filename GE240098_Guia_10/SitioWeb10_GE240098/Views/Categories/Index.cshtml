@model IEnumerable<SitioWeb10_GE240098.Categories>

@{
    ViewBag.Title = "Categorias de Productos";
}


<h2>Información de Categorias de Productos registrados</h2>

<p>
    @Html.ActionLink("Crear Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Nombre de la categoria
        </th>
        <th>
            Descripción
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Modificar", "Edit", new { id = item.CategoryID }) |
                @Html.ActionLink("Ver Detalles", "Details", new { id = item.CategoryID }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.CategoryID })
            </td>
        </tr>
    }

</table>
